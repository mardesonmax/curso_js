<%- include('includes/header') %>
    <%- include('includes/navbar') %>

        <div class="container">
            <div class="row">
                <div class="col-lg-8 m-auto justify-content-center mt-5">
                    <h1 class="display-5 text-center ">Login</h1>
                    <p class="text-center lead">Faça login ou cria sua conta abaixo.</p>
                    
                    <!--messages-->
                    <%- include('includes/messages'); %>

                    <!-- Login -->
                    <div class="row mt-5">
                        <div class="col-lg-6 mb-5">
                            <h4>Fazer login</h4>
                            <p>Para continua faça login abaixo</p>

                            <form action="/login" method="POST">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <div class="form-group">
                                    <label>Endereço de email</label>
                                    <input type="email" class="form-control" name="email" value="<%= dataLogin && dataLogin.email %>">
                                    <small id="emailHelp" class="form-text text-muted">Nunca vamos compartilhar seu email, com ninguém.</small>
                                </div>
                                <div class="form-group">
                                    <label>Senha</label>
                                    <input type="password" class="form-control" name="password">
                                </div>
                                <button type="submit" class="btn btn-primary">Enviar</button>
                            </form>
                        </div>

                        <!-- Register -->
                        <div class="col-lg-6">
                            <h4>Cadastre-se</h4>
                            <p>Crie uma conta para continua</p>

                            <form action="/login/register" method="POST">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <div class="form-group">
                                    <label>Nome</label>
                                    <input type="text" class="form-control" name="name" value="<%= dataRigister && dataRigister.name %>">
                                </div>
                                <div class="form-group">
                                    <label>Endereço de email</label>
                                    <input type="email" class="form-control" name="email" value="<%= dataRigister && dataRigister.email %>">
                                    <small id="emailHelp" class="form-text text-muted">Nunca vamos compartilhar seu email, com ninguém.</small>
                                </div>
                                <div class="form-group">
                                    <label>Senha</label>
                                    <input type="password" class="form-control" name="password">
                                </div>
                                <button type="submit" class="btn btn-primary">Enviar</button>
                            </form>

                        </div>
                    </div>

                </div>

            </div>
        </div>


        <%- include('includes/footer') %>